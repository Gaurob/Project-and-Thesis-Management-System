<?xml version="1.0" encoding="utf-8"?>


<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

   <LinearLayout
       android:layout_width="match_parent"
       android:layout_height="match_parent"
       android:orientation="vertical"
     >

       <TextView
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:text="Project Details"
           android:textSize="35dp"
           android:textAlignment="center"
           android:layout_marginTop="14dp"
           />

       <RelativeLayout
           android:layout_width="wrap_content"
           android:layout_height="wrap_content">

           <TextView
               android:id="@+id/name_id"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:text="name  :"
           android:textSize="20dp"
           android:layout_marginTop="10dp"
           />

           <TextView
               android:id="@+id/project_dtls_student_id"
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:text="Ashik "
               android:textSize="20dp"
               android:layout_toRightOf="@+id/name_id"
               android:layout_marginTop="10dp"
               android:layout_marginLeft="40dp"
               />

       </RelativeLayout>

       <RelativeLayout
           android:layout_width="wrap_content"
           android:layout_height="wrap_content">

           <TextView
              android:id="@+id/advisor_name_id"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:text="advisor :"
               android:textSize="20dp"
               android:layout_marginTop="10dp"
               />

           <TextView
               android:id="@+id/project_dtls_advisor_id"
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:text="enam"
               android:textSize="20dp"
               android:layout_toRightOf="@+id/advisor_name_id"
               android:layout_marginTop="10dp"
               android:layout_marginLeft="40dp"
               />

       </RelativeLayout>
       <RelativeLayout
           android:layout_width="wrap_content"
           android:layout_height="wrap_content">

           <TextView
               android:id="@+id/title_id"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:text="Title :"
               android:textSize="20dp"
               android:layout_marginTop="10dp"
               />

           <TextView
               android:id="@+id/project_dtls_project_title_id"
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:text=""
               android:textSize="20dp"
               android:layout_toRightOf="@+id/title_id"
               android:layout_marginTop="10dp"
               android:layout_marginLeft="40dp"
               />

       </RelativeLayout>
       <RelativeLayout
           android:layout_width="wrap_content"
           android:layout_height="wrap_content">

           <TextView
               android:id="@+id/description_id"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:text="Description :"
               android:textSize="20dp"
               android:layout_marginTop="10dp"
               />

           <TextView
               android:id="@+id/project_dtls_description_id"
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:text=""
               android:textSize="20dp"
               android:layout_toRightOf="@+id/description_id"
               android:layout_marginTop="10dp"
               android:layout_marginLeft="40dp"
               />

       </RelativeLayout>

       <RelativeLayout
           android:layout_width="wrap_content"
           android:layout_height="wrap_content">

           <TextView
               android:id="@+id/platform_id"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:text="Platform :"
               android:textSize="20dp"
               android:layout_marginTop="10dp"
               />

           <TextView
               android:id="@+id/project_dtls_platform_id"
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:text=""
               android:textSize="20dp"
               android:layout_toRightOf="@+id/platform_id"
               android:layout_marginTop="10dp"
               android:layout_marginLeft="40dp"
               />

       </RelativeLayout>

       <RelativeLayout
           android:layout_width="wrap_content"
           android:layout_height="wrap_content">

           <TextView
               android:id="@+id/Technology_id"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:text="Technology :"
               android:textSize="20dp"
               android:layout_marginTop="10dp"
               />

           <TextView
               android:id="@+id/project_dtls_Technology_id"
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:text=""
               android:textSize="20dp"
               android:layout_toRightOf="@+id/Technology_id"
               android:layout_marginTop="10dp"
               android:layout_marginLeft="40dp"
               />

       </RelativeLayout>

       <RelativeLayout
           android:layout_width="wrap_content"
           android:layout_height="wrap_content">

           <TextView
               android:id="@+id/github_id"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:text="Github ID :"
               android:textSize="20dp"
               android:layout_marginTop="10dp"
               />

           <TextView
               android:id="@+id/project_dtls_Github_id"
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:text=""
               android:textSize="20dp"
               android:layout_toRightOf="@+id/github_id"
               android:layout_marginTop="10dp"
               android:layout_marginLeft="40dp"
               />

       </RelativeLayout>


   </LinearLayout>


</ScrollView>